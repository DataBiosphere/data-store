{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectTagging",
        "s3:ListBucket",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::$DSS_S3_BUCKET",
        "arn:aws:s3:::$DSS_S3_BUCKET/*",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST/*",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST_FIXTURES",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST_FIXTURES/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "lambda:*",
      "Resource": [
        "arn:aws:lambda:*:$account_id:function:dss-visitation*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
		"states:ListExecutions",
		"states:StartExecution",
		"states:DescribeExecution"
	  ],
      "Resource": [
        "arn:aws:states:*:$account_id:stateMachine:dss-visitation*",
        "arn:aws:states:*:$account_id:execution:dss-visitation*"
	  ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "es:ESHttpDelete",
        "es:ESHttpGet",
        "es:ESHttpHead",
        "es:ESHttpPost",
        "es:ESHttpPut"
      ],
      "Resource": "arn:aws:es:*:$account_id:domain/$dss_es_domain/*"
    },
    {
      "Effect": "Allow",
      "Action": [
          "xray:PutTelemetryRecords",
          "xray:PutTraceSegments"
      ],
      "Resource": "*"
    }
  ]
}
