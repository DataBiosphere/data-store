{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::$DSS_S3_BUCKET",
        "arn:aws:s3:::$DSS_S3_BUCKET/*",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:List*",
        "s3:Get*",
        "s3:PutObject*",
        "s3:DeleteObject*"
      ],
      "Resource": [
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST_FIXTURES",
        "arn:aws:s3:::$DSS_S3_BUCKET_TEST_FIXTURES/*",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET/*",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET_TEST",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET_TEST/*",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET_TEST_USER",
        "arn:aws:s3:::$DSS_S3_CHECKOUT_BUCKET_TEST_USER/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "sns:Publish",
      "Resource": [
        "arn:aws:sns:*:$account_id:dss-*-$stage",
        "arn:aws:sns:*:$account_id:*-*-$stage"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "lambda:*",
      "Resource": [
        "arn:aws:lambda:*:$account_id:function:dss-*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "ses:SendEmail",
      "Resource": [
        "arn:aws:ses:*:*:*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "states:ListExecutions",
        "states:StartExecution",
        "states:DescribeExecution"
      ],
      "Resource": [
        "arn:aws:states:*:$account_id:stateMachine:dss-s3-copy-sfn*",
        "arn:aws:states:*:$account_id:execution:dss-s3-copy-sfn*",
        "arn:aws:states:*:$account_id:stateMachine:dss-gs-copy-sfn*",
        "arn:aws:states:*:$account_id:execution:dss-gs-copy-sfn*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
          "xray:PutTelemetryRecords",
          "xray:PutTraceSegments"
      ],
      "Resource": "*"
    }
  ]
}
